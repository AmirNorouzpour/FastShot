@model IEnumerable<Domain.Models.User>
<div class="card" style="width:100%;height:85vh">
    <div style="padding:20px">
        @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Mobile).Titled("Mobile");
        columns.Add(model => model.UserName).Titled("UserName");
        columns.Add(model => model.Credit).Titled("Credit");
        columns.Add(model => model.RealCredit).Titled("RealCredit");
        columns.Add(model => model.RegisterDateTime).Titled("RegisterDateTime").Formatted("{0:d}");
        columns.Add(model => model.DeviceName).Titled("DeviceName");
    })
    .Filterable(GridFilterCase.Lower)
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Pageable(pager =>
    {
        pager.RowsPerPage = 4;
    })
    .Sortable()
)
    </div>
</div>
